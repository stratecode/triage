# TrIAge Configuration
# Copy this file to .env and fill in your values

# Required: JIRA Configuration
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-api-token-here

# Optional: Project Filter
# If set, only tasks from this project will be included in daily plans
# Example: JIRA_PROJECT=PROJ (for project key like PROJ-123)
# Leave empty to search across all projects
JIRA_PROJECT=

# Optional: Admin Block Scheduling
# Default admin block is 14:00-15:30 (post-lunch low-energy period)
ADMIN_TIME_START=14:00
ADMIN_TIME_END=15:30

# Database Configuration (PostgreSQL)
POSTGRES_DB=triage
POSTGRES_USER=triage_user
POSTGRES_PASSWORD=triage_password

# JWT Secret for API authentication
JWT_SECRET=dev-secret-change-in-production

# Logging
LOG_LEVEL=DEBUG

# Plugin Configuration
# Slack Plugin OAuth Credentials
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_OAUTH_REDIRECT_URI=http://localhost:8001/plugins/slack/oauth/callback

# AWS LocalStack Configuration (for local development)
AWS_ENDPOINT_URL=http://localstack:4566
AWS_DEFAULT_REGION=eu-south-2
AWS_REGION=eu-south-2
