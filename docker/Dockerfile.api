FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    zip \
    && rm -rf /var/lib/apt/lists/*

# Install uv for package management
RUN pip install --no-cache-dir uv

# Install boto3 for AWS SDK, awscli-local for deployment, requests for HTTP, and AWS SAM CLI
RUN pip install --no-cache-dir boto3 awscli-local requests aws-sam-cli aws-sam-cli-local

# Copy Docker-specific requirements
COPY docker/requirements.txt /app/requirements.txt

# Install Python dependencies using uv
RUN uv pip install --system -r requirements.txt

# Copy application code
COPY triage/ /app/triage/
COPY lambda/ /app/lambda/
COPY docker/ /app/docker/

# Create logs directory
RUN mkdir -p /app/logs

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=10s --timeout=5s --retries=3 \
    CMD curl -f http://localhost:8000/api/v1/health || exit 1

# Run the API server
CMD ["uvicorn", "local_api:app", "--host", "0.0.0.0", "--port", "8000", "--log-level", "debug"]
