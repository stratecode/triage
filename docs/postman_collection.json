{
  "info": {
    "name": "TrIAge API",
    "description": "AI Secretary Serverless API - Daily plan generation and task management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "triage-api"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://your-api-id.execute-api.eu-south-2.amazonaws.com/dev",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "your-jwt-token-here",
      "type": "string"
    },
    {
      "key": "today",
      "value": "2026-02-17",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/health",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "health"]
            },
            "description": "Check API health status. No authentication required."
          },
          "response": [
            {
              "name": "Success",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{base_url}}/api/v1/health",
                  "host": ["{{base_url}}"],
                  "path": ["api", "v1", "health"]
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"status\": \"healthy\",\n  \"service\": \"triage-api\",\n  \"version\": \"0.1.0\",\n  \"timestamp\": \"2026-02-17T10:30:00.000Z\"\n}"
            }
          ]
        }
      ],
      "description": "Health check endpoints"
    },
    {
      "name": "Plans",
      "item": [
        {
          "name": "Generate Daily Plan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"{{today}}\",\n  \"closure_rate\": 0.67\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/plan",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "plan"]
            },
            "description": "Generate a daily plan with up to 3 priority tasks and administrative task blocks.\n\n**Request Body:**\n- `date` (optional): Target date in ISO format (YYYY-MM-DD). Defaults to today.\n- `closure_rate` (optional): Previous day's task closure rate (0.0-1.0) to adjust planning."
          },
          "response": [
            {
              "name": "Success",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"date\": \"2026-02-17\",\n  \"closure_rate\": 0.67\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/v1/plan",
                  "host": ["{{base_url}}"],
                  "path": ["api", "v1", "plan"]
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"success\": true,\n  \"date\": \"2026-02-17\",\n  \"plan\": {\n    \"priorities\": [\n      {\n        \"key\": \"PROJ-123\",\n        \"summary\": \"Implement user authentication\",\n        \"effort_hours\": 6,\n        \"priority\": 1\n      },\n      {\n        \"key\": \"PROJ-124\",\n        \"summary\": \"Fix critical bug in payment flow\",\n        \"effort_hours\": 4,\n        \"priority\": 2\n      }\n    ],\n    \"admin_block\": {\n      \"tasks\": [\n        {\n          \"key\": \"PROJ-125\",\n          \"summary\": \"Review pull requests\"\n        },\n        {\n          \"key\": \"PROJ-126\",\n          \"summary\": \"Update documentation\"\n        }\n      ],\n      \"time_start\": \"14:00\",\n      \"time_end\": \"15:30\"\n    },\n    \"other_tasks_count\": 5,\n    \"markdown\": \"# Daily Plan - 2026-02-17\\n\\n## Priority Tasks\\n...\"\n  }\n}"
            }
          ]
        },
        {
          "name": "Generate Plan (Today)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/plan",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "plan"]
            },
            "description": "Generate a plan for today with default settings (no date or closure_rate specified)."
          },
          "response": []
        },
        {
          "name": "Get Plan by Date",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/plan/{{today}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "plan", "{{today}}"]
            },
            "description": "Retrieve an existing plan for a specific date.\n\n**Path Parameters:**\n- `date`: Date in ISO format (YYYY-MM-DD)"
          },
          "response": [
            {
              "name": "Success",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{base_url}}/api/v1/plan/2026-02-17",
                  "host": ["{{base_url}}"],
                  "path": ["api", "v1", "plan", "2026-02-17"]
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"success\": true,\n  \"date\": \"2026-02-17\",\n  \"plan\": {\n    \"priorities\": [...],\n    \"admin_block\": {...},\n    \"other_tasks_count\": 5,\n    \"markdown\": \"...\"\n  }\n}"
            }
          ]
        },
        {
          "name": "Approve Plan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"approved\": true,\n  \"feedback\": \"Looks good, ready to start\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/plan/{{today}}/approve",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "plan", "{{today}}", "approve"]
            },
            "description": "Approve or reject a generated plan.\n\n**Path Parameters:**\n- `date`: Date of the plan in ISO format (YYYY-MM-DD)\n\n**Request Body:**\n- `approved` (required): Boolean indicating approval status\n- `feedback` (optional): User feedback or rejection reason\n- `modifications` (optional): Any modifications to the plan"
          },
          "response": [
            {
              "name": "Approved",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"approved\": true,\n  \"feedback\": \"Looks good\"\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/v1/plan/2026-02-17/approve",
                  "host": ["{{base_url}}"],
                  "path": ["api", "v1", "plan", "2026-02-17", "approve"]
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"success\": true,\n  \"date\": \"2026-02-17\",\n  \"approved\": true,\n  \"message\": \"Plan approval recorded\"\n}"
            }
          ]
        },
        {
          "name": "Reject Plan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"approved\": false,\n  \"feedback\": \"Too many tasks, reduce to 2 priorities\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/plan/{{today}}/approve",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "plan", "{{today}}", "approve"]
            },
            "description": "Reject a plan with feedback for regeneration."
          },
          "response": []
        }
      ],
      "description": "Daily plan generation, retrieval, and approval endpoints"
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Decompose Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"target_days\": 1\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/task/:taskId/decompose",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "task", ":taskId", "decompose"],
              "variable": [
                {
                  "key": "taskId",
                  "value": "PROJ-123",
                  "description": "JIRA task key (e.g., PROJ-123)"
                }
              ]
            },
            "description": "Decompose a long-running task into smaller, daily-closable subtasks.\n\n**Path Parameters:**\n- `taskId`: JIRA task key (e.g., PROJ-123)\n\n**Request Body:**\n- `target_days` (optional): Target duration in days for each subtask. Defaults to 1."
          },
          "response": [
            {
              "name": "Success",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"target_days\": 1\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/v1/task/PROJ-123/decompose",
                  "host": ["{{base_url}}"],
                  "path": ["api", "v1", "task", "PROJ-123", "decompose"]
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": "{\n  \"success\": true,\n  \"task_id\": \"PROJ-123\",\n  \"decomposition\": {\n    \"parent_key\": \"PROJ-123\",\n    \"subtasks\": [\n      {\n        \"summary\": \"Setup authentication infrastructure\",\n        \"description\": \"Configure OAuth2 provider and database schema\",\n        \"estimated_hours\": 6\n      },\n      {\n        \"summary\": \"Implement login endpoint\",\n        \"description\": \"Create REST API endpoint for user login\",\n        \"estimated_hours\": 4\n      },\n      {\n        \"summary\": \"Add frontend integration\",\n        \"description\": \"Connect UI to authentication API\",\n        \"estimated_hours\": 5\n      }\n    ]\n  }\n}"
            }
          ]
        }
      ],
      "description": "Task management and decomposition endpoints"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set today's date dynamically",
          "const today = new Date().toISOString().split('T')[0];",
          "pm.collectionVariables.set('today', today);"
        ]
      }
    }
  ]
}
