# TrIAge Slack Bot Configuration

# Slack API Credentials
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_CLIENT_ID=your-client-id-here
SLACK_CLIENT_SECRET=your-client-secret-here

# TrIAge API Configuration
TRIAGE_API_URL=https://api.triage.example.com
TRIAGE_API_TOKEN=your-triage-api-token-here

# Redis Configuration (for webhook deduplication)
REDIS_URL=redis://localhost:6379
REDIS_TTL_SECONDS=300

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/triage_slack

# Encryption Configuration (must be at least 32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Webhook Configuration
WEBHOOK_TIMEOUT_SECONDS=3

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_BASE=2.0
